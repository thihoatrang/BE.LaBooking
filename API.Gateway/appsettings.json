{
  "ServiceUrls": {
    "UsersAPI": "https://localhost:7071",
    "LawyersAPI": "https://localhost:7110",
    "AppointmentsAPI": "https://localhost:7073",
    "ChatAPI": "https://localhost:7120"
  },
  "ReverseProxy": {
    "Routes": {
      "users_route": {
        "ClusterId": "users_cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "lawyers_route": {
        "ClusterId": "lawyers_cluster",
        "Match": {
          "Path": "/api/lawyers/{**catch-all}"
        }
      },
      "appointments_route": {
        "ClusterId": "appointments_cluster",
        "Match": {
          "Path": "/api/appointments/{**catch-all}"
        }
      },
      "chat_route": {
        "ClusterId": "chat_cluster",
        "Match": {
          "Path": "/api/chat/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "users_cluster": {
        "Destinations": {
          "users/destination1": {
            "Address": "https://localhost:7071"
          }
        }
      },
      "lawyers_cluster": {
        "Destinations": {
          "lawyers/destination1": {
            "Address": "https://localhost:7110"
          }
        }
      },
      "appointments_cluster": {
        "Destinations": {
          "appointments/destination1": {
            "Address": "https://localhost:7073"
          }
        }
      },
      "chat_cluster": {
        "Destinations": {
          "chat/destination1": {
            "Address": "https://localhost:7120"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Ocelot": "Debug",
      "Microsoft": "Warning"
    }
  },
  "AllowedHosts": "*"
}
